block scripts
    script(src='/static/index.js')

block style
    style
        include ../static/style.css
  
block content
    section#introSection.displayFlex
        div Welcome To World's Best Dance Academy
        div.small Eat Sleep Dance...Repeat
    
    section#missionSection
        h2 Our mission
        div.displayFlex
            div.card
                h3 Dance perfection
                div.card-box.displayFlex
